<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_lbsconfig"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="me.robin.crackfuckfxxk.LBSConfigActivity">

    <TextView
            android:text="经纬度信息"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" android:id="@+id/textView6" android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/locEditText"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginStart="9dp" android:layout_marginTop="48dp" android:id="@+id/locEditText"/>
    <TextView
            android:text="当前LBS信息"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="41dp" android:id="@+id/textView7"
            android:layout_below="@+id/locEditText" android:layout_alignStart="@+id/locEditText"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/lbsResultTextView"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/textView7" android:layout_alignStart="@+id/textView7"/>
    <Switch
            android:text="启用"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:id="@+id/onOrOff" android:layout_alignBaseline="@+id/update"
            android:layout_alignBottom="@+id/update" android:layout_alignStart="@+id/lbsResultTextView"/>
    <Button
            android:text="更新LBS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/update"
            android:layout_marginStart="94dp" android:layout_marginTop="53dp"
            android:layout_below="@+id/lbsResultTextView" android:layout_toEndOf="@+id/onOrOff"/>
    <Button
            android:text="更新"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignTop="@+id/update"
            android:layout_toEndOf="@+id/onOrOff" android:id="@+id/saveDataBut"/>
</RelativeLayout>
